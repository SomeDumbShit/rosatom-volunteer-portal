# Database
# SQLite (для разработки - проще):
DATABASE_URL="file:./dev.db"

# PostgreSQL (для продакшена):
# DATABASE_URL="postgresql://user:password@localhost:5432/volunteer_portal"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-change-this-in-production"

# Email (Nodemailer)
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@example.com"
EMAIL_SERVER_PASSWORD="your-email-password"
EMAIL_FROM="noreply@volunteerportal.ru"

# Yandex Maps API
# Get your API key from: https://developer.tech.yandex.ru/
# 1. Go to https://developer.tech.yandex.ru/
# 2. Sign in with your Yandex account
# 3. Create a new JavaScript API project
# 4. Copy the API key and paste it here
NEXT_PUBLIC_YANDEX_MAPS_API_KEY="your-yandex-maps-api-key"

# File Uploads
UPLOAD_DIR="./public/uploads"
MAX_FILE_SIZE=5242880

# App
NEXT_PUBLIC_APP_NAME="Волонтерский Портал Росатома"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# VK OAuth (для входа через VK)
# Получить на: https://vk.com/apps?act=manage
# 1. Создайте приложение типа "Веб-сайт"
# 2. Скопируйте ID приложения и защищенный ключ
# 3. Установите NEXT_PUBLIC_VK_ENABLED="true" чтобы показать виджет VK на странице входа
VK_CLIENT_ID="your-vk-app-id"
VK_CLIENT_SECRET="your-vk-app-secret"
NEXT_PUBLIC_VK_CLIENT_ID="your-vk-app-id"  # Тот же ID для клиентской части
NEXT_PUBLIC_VK_ENABLED="false"
